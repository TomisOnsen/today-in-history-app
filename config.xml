<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.tomi" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TomiApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

		<platform name="android">
	    <!-- you can use any density that exists in the Android project -->
	    <splash src="res/screen/android/422-landscape-splash-hdpi.png" density="land-hdpi"/>
	    <splash src="res/screen/android/422-landscape-splash-ldpi.png" density="land-ldpi"/>
	    <splash src="res/screen/android/422-landscape-splash-mdpi.png" density="land-mdpi"/>
	    <splash src="res/screen/android/422-landscape-splash-xhdpi.png" density="land-xhdpi"/>

	    <splash src="res/screen/android/422-portrait-splash-hdpi.png" density="port-hdpi"/>
	    <splash src="res/screen/android/422-portrait-splash-ldpi.png" density="port-ldpi"/>
	    <splash src="res/screen/android/422-portrait-splash-mdpi.png" density="port-mdpi"/>
	    <splash src="res/screen/android/422-portrait-splash-xhdpi.png" density="port-xhdpi"/>

			<preference name="SplashMaintainAspectRatio" value="false" />
			<preference name="SplashScreenSpinnerColor" value="red" />
		</platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
